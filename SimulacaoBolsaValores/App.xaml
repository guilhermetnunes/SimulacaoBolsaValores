<Application x:Class="SimulacaoBolsaValores.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimulacaoBolsaValores" 
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        
        
        <ResourceDictionary>
            
            <Style x:Key="firstColor_StackPanel" TargetType="StackPanel">
                <Setter Property="Background" Value="#2b3240"/>
            </Style>

            <Style x:Key="secondColor_StackPanel" TargetType="StackPanel">
                <Setter Property="Background" Value="#161b2a"/>
            </Style>

            <Style x:Key="firstColor_ListView" TargetType="ListView">
                <Setter Property="Background" Value="#2b3240"/>
            </Style>
            
        </ResourceDictionary>

    </Application.Resources>
</Application>
