<Page x:Class="SimulacaoBolsaValores.Views.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimulacaoBolsaValores.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="Inicio">
    
        <StackPanel Height="450" Width="1000" Background="Black">

        <!--cabeçalho-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="850"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource firstColor_StackPanel}">
                <Image Margin="3" Source="../_Images/logo_xp.png" Height="45"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource firstColor_StackPanel}">
                <Label  Background="#2b3240" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Content="[ SIMULAÇÃO DA BOLSA DE VALORES ]"/>
            </StackPanel>

        </Grid>

        <!--contedo-->
        <StackPanel Style="{StaticResource secondColor_StackPanel}" Orientation="Vertical" Height="370">
           
            <!--linha1: config -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Label Foreground="White">NOVO ATIVO:</Label>
                <TextBox Margin="10,0" Width="100" MaxLength="10" VerticalContentAlignment="Center" Text="{Binding AtivoDigitado}" IsEnabled="{Binding EmStandby}"></TextBox>
                <Button Padding="10,0" Command="{Binding AdicionarICommand}" IsEnabled="{Binding EmStandby}">ADICIONAR</Button>
                <CheckBox Margin="10,0" VerticalAlignment="Center" Foreground="White" IsEnabled="{Binding EmStandby}" IsChecked ="{Binding GerarAtivosAuto}">INCLUIR AUTO</CheckBox>
                <Label Foreground="White">|||</Label>
                <Label Foreground="White">TEMPO:</Label>
                <TextBox VerticalContentAlignment="Center" Width="50" MaxLength="5" IsEnabled="{Binding EmStandby}">1000</TextBox>
                <Label Foreground="White">ms</Label>
                <Label Foreground="White">|||</Label>
                <Label Foreground="White">PROCESSAMENTO:</Label>
                <Button Margin="10,0" Padding="10,0" VerticalContentAlignment="Center" Command="{Binding IniciarICommand}" IsEnabled="{Binding EmStandby}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="3" Source="../_Images/START.png" Height="15"/>
                        <Label Margin="3,0">INICIAR</Label>
                    </StackPanel>
                </Button>
                <Button Padding="10,0" VerticalContentAlignment="Center" Command="{Binding PararICommand}" IsEnabled="{Binding EmExecucao}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="3" Source="../_Images/stop.png" Height="15"/>
                        <Label Margin="3,0">PARAR</Label>
                    </StackPanel>
                </Button>
                <Button Margin="10,0" Padding="10,0" Command="{Binding LimparICommand}" IsEnabled="{Binding EmStandby}">LIMPAR</Button>
            </StackPanel>

            <!--linha2: subtitulos e totais-->
            <StackPanel Orientation="Vertical">
                
                <!--subtitulo historico-->
                <Label HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Width="130">||| HISTÓRICO</Label>
                    
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="280"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="860"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--subtitulo ordens-->
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White">> ORDENS EM ABERTO</Label>

                    <!--totais-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1">
                        <Label VerticalAlignment="Bottom" Foreground="White">TOTAL QUANTIDADE:</Label>
                        <Label VerticalAlignment="Bottom" Foreground="White">0</Label>
                        <Label VerticalAlignment="Bottom" Foreground="White">TOTAL DISPONÍVEL:</Label>
                        <Label VerticalAlignment="Bottom" Foreground="White">0</Label>
                    </StackPanel>

                    <!--grid-->
                    <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="15" ItemsSource="{Binding lstAtivos}" HorizontalContentAlignment="Center">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="DATA E HORA" Width="120" DisplayMemberBinding="{Binding DataHora, StringFormat='dd/MM/yyyy HH:mm:ss'}"/>
                                <GridViewColumn Header="ASSESSOR" Width="70" DisplayMemberBinding="{Binding Assessor}" />
                                <GridViewColumn Header="CONTA" Width="60" DisplayMemberBinding="{Binding Conta}" />
                                <GridViewColumn Header="ATIVO" Width="50" DisplayMemberBinding="{Binding Ativo}" />
                                <GridViewColumn Header="TIPO" Width="40" DisplayMemberBinding="{Binding Tipo}" />
                                <GridViewColumn Header="QTD" Width="40" DisplayMemberBinding="{Binding Qtd}"/>
                                <GridViewColumn Header="QTD.APARENTE" Width="95" DisplayMemberBinding="{Binding QtdAparente}" />
                                <GridViewColumn Header="QTD.DISP" Width="60" DisplayMemberBinding="{Binding QtdDisp}" />
                                <GridViewColumn Header="QTD.CANCEL" Width="80" DisplayMemberBinding="{Binding QtdCancel}" />
                                <GridViewColumn Header="QTD.EXEC" Width="65" DisplayMemberBinding="{Binding QtdExec}" />
                                <GridViewColumn Header="VALOR" Width="50" DisplayMemberBinding="{Binding Valor}"/>
                                <GridViewColumn Header="VALOR DISP" Width="75" DisplayMemberBinding="{Binding ValorDisp}" />
                                <GridViewColumn Header="OBJETIVO" Width="60" DisplayMemberBinding="{Binding Objetivo}" />
                                <GridViewColumn Header="OBJ.DISP" Width="60" DisplayMemberBinding="{Binding ObjDisp}" />
                                <GridViewColumn Header="REDUÇÃO" Width="65" DisplayMemberBinding="{Binding Reducao}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!--rodapé-->
        <StackPanel Style="{StaticResource firstColor_StackPanel}" Height="30" VerticalAlignment="Bottom" >
            <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White">Desenvolvido por Guilherme Nunes</Label>
        </StackPanel>
     </StackPanel>
</Page>
