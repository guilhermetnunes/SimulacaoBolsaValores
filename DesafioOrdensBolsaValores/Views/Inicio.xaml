<Page x:Class="SimulacaoBolsaValores.Views.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimulacaoBolsaValores.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Inicio">
    
        <StackPanel Height="550" Width="1000" Background="Black">

        <!--cabeçalho-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="850"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource secondColor_StackPanel}">
                <Image Margin="3" Source="../_Images/logo_xp.png" Height="45"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource secondColor_StackPanel}">
                <Label  Background="Transparent" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Content="[ SIMULAÇÃO DA BOLSA DE VALORES ]"/>
            </StackPanel>

        </Grid>

        <!--contedo-->
        <StackPanel Style="{StaticResource secondColor_StackPanel}" Orientation="Vertical" Height="470">
            <StackPanel Style="{StaticResource firstColor_StackPanel}" Orientation="Vertical">
                <!--config -->
                <Label Foreground="White" HorizontalAlignment="Left" FontStyle="Italic">INCLUIR NOVO ATIVO</Label>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                    <Label Foreground="White">CÓD.ATIVO:</Label>
                    <TextBox Margin="10,0" Width="80" MaxLength="10" VerticalContentAlignment="Center" Text="{Binding AtivoDigitado}"></TextBox>
                    <Button Padding="10,0" Command="{Binding AdicionarICommand}">+</Button>
                    <Label Margin="10,0,0,0" Foreground="White">|||</Label>
                    <Label Margin="10,0" Foreground="White">GERAR ATIVOS AUTOMATICAMENTE QTD:</Label>
                    <TextBox Margin="0,0,10,0" Width="50" MaxLength="10" VerticalContentAlignment="Center" Text="{Binding QtdAtivosDigitadaParaGerarAtomaticamente}"></TextBox>
                    <Button Padding="10,0" Command="{Binding AdicionarAutoICommand}">+</Button>
                </StackPanel>

                <Label Foreground="White" HorizontalAlignment="Right" FontStyle="Italic">CONTROLE DE PROCESSAMENTO</Label>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Label Foreground="White">TEMPO DE ATUALIZAÇÃO:</Label>
                    <TextBox VerticalContentAlignment="Center" Width="50" MaxLength="5" IsEnabled="{Binding EmStandby}" Text="{Binding TempoDigitado}"/>
                    <Label Foreground="White">ms</Label>
                    <Button Margin="10,0" Padding="10,0" VerticalContentAlignment="Center" Command="{Binding IniciarICommand}" IsEnabled="{Binding EmStandby}">
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="3" Source="../_Images/START.png" Height="15"/>
                            <Label Margin="3,0">INICIAR</Label>
                        </StackPanel>
                    </Button>
                    <Button Padding="10,0" VerticalContentAlignment="Center" Command="{Binding PararICommand}" IsEnabled="{Binding EmExecucao}">
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="3" Source="../_Images/stop.png" Height="15"/>
                            <Label Margin="3,0">PARAR</Label>
                        </StackPanel>
                    </Button>
                    <Button Margin="10,0" Padding="10,0" Command="{Binding LimparICommand}" IsEnabled="{Binding EmStandby}">LIMPAR</Button>
                </StackPanel>
            </StackPanel>

            <!--subtitulos e totais-->
            <StackPanel Orientation="Vertical">
                
                <!--subtitulo historico-->
                <Label HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Width="130">||| HISTÓRICO</Label>
                    
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="290"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--subtitulo ordens-->
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White">> ORDENS EM ABERTO</Label>

                    <!--totais-->
                    <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" Text="TOTAL QUANTIDADE: "/>
                    <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Foreground="White" Text="{Binding TotalQuantidade}"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" Text="TOTAL DISPONÍVEL: "/>
                    <TextBlock Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Foreground="White" Text="{Binding TotalDisponivel}"/>

                    <!--grid-->
                    <ListView Name="grdAtivos" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="15" ItemsSource="{Binding lstAtivos}" HorizontalContentAlignment="Center" Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="120">
                                    <GridViewColumnHeader Tag="DataHora" Click="GridColumnHeader_Click"  Background="Transparent" Foreground="White">DATA E HORA</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DataHora, StringFormat='dd/MM/yyyy HH:mm:ss'}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="70">
                                    <GridViewColumnHeader Tag="DataHora" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">ASSESSOR</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Assessor}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="60">
                                    <GridViewColumnHeader Tag="Conta" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">CONTA</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Conta}" Foreground="White"/>
                                    </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>                                    
                                    
                                <GridViewColumn Width="50">
                                    <GridViewColumnHeader Tag="Ativo" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">ATIVO</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Ativo}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="40">
                                    <GridViewColumnHeader Tag="Tipo" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">TIPO</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Tipo}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="40">
                                    <GridViewColumnHeader Tag="Qtd" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">QTD</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Qtd}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="95">
                                    <GridViewColumnHeader Tag="QtdAparente" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">QTD.APARENTE</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding QtdAparente}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn  Width="60">
                                    <GridViewColumnHeader Tag="QtdDisp" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">QTD.DISP</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                                <TextBlock Text="{Binding QtdDisp}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="80">
                                    <GridViewColumnHeader Tag="QtdCancel" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">QTD.CANCEL</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding QtdCancel}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="65">
                                    <GridViewColumnHeader Tag="QtdExec" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">QTD.EXEC</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding QtdExec}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="50">
                                    <GridViewColumnHeader Tag="Valor" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">VALOR</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Valor}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="75">
                                    <GridViewColumnHeader Tag="ValorDisp" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">VALOR DISP</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ValorDisp}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="60" >
                                    <GridViewColumnHeader Tag="Objetivo" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">OBJETIVO</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Objetivo}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="60">
                                    <GridViewColumnHeader Tag="ObjDisp" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">OBJ.DISP</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ObjDisp}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="65">
                                    <GridViewColumnHeader Tag="Reducao" Click="GridColumnHeader_Click" Background="Transparent" Foreground="White">REDUÇÃO</GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Reducao}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!--rodapé-->
        <StackPanel Style="{StaticResource firstColor_StackPanel}" Height="30" VerticalAlignment="Bottom" >
            <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White">Desenvolvido por Guilherme Nunes</Label>
        </StackPanel>
     </StackPanel>
</Page>
